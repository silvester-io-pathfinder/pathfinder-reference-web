@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Components.Tables.Instances.Hazards;
@using Silvester.Pathfinder.Official.Web.Components.Tables.Instances.Hazards.Providers;
@using Silvester.Pathfinder.Official.Web.Components.Tables.Instances.HazardComplexities;
@using Silvester.Pathfinder.Official.Web.Components.Tables.Instances.HazardComplexities.Providers;
@using Silvester.Pathfinder.Official.Web.Components.Tables.Instances.HazardTypes;
@using Silvester.Pathfinder.Official.Web.Components.Tables.Instances.HazardTypes.Providers;
@using Silvester.Pathfinder.Official.Web.Components.Cards;

@page "/hazards"
@inherits BaseOverviewPage

<div>
    <PageLayout>
        <MudPaper Style="margin: 20px;">
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" Border="true">
                <MudTabPanel Text="Hazards">
                    <HazardsTable PageProvider="@(new HazardPageProvider(PathfinderOfficialApi))" />
                </MudTabPanel>
                <MudTabPanel Text="Types">
                    <HazardTypesTable PageProvider="@(new HazardTypePageProvider(PathfinderOfficialApi))" />
                </MudTabPanel>
                <MudTabPanel Text="Complexities">
                    <HazardComplexitiesTable PageProvider="@(new HazardComplexityPageProvider(PathfinderOfficialApi))" />
                </MudTabPanel>
            </MudTabs>
        </MudPaper>
    </PageLayout>

</div>

@code
{
    protected override string Title => "Hazards";
}