@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Components.Cards;
@using Silvester.Pathfinder.Official.Web.Components.Cards.Details.Instances;

@inherits BaseDetailPage
@page "/alchemical-poisons/{resourceId:guid}"
@implements IDisposable

<div>
    <PageLayout>
        @if (Poison != null)
        {
            <MudPaper Style="margin: 20px">
                <AlchemicalPoisonDetailsCard Entity="@Poison" />
            </MudPaper>
        }
    </PageLayout>
</div>

@code {
    protected override string CollectionName => "alchemical-poisons";
    protected override string? ResourceName => Poison?.Name;

    private IAlchemicalPoisonById? Poison { get; set; }

    private IDisposable? StoreSession { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        StoreSession = PathfinderOfficialApi.GetAlchemicalPoisonById
            .Watch(ResourceId)
            .Select(e => e.Data?.AlchemicalPoisons?.Items?.FirstOrDefault())
            .Subscribe(poison =>
            {
                Poison = poison;
                OnResourceLoaded();
            });
    }

    public void Dispose()
    {
        StoreSession?.Dispose();
    }
}