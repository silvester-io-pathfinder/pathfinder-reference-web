@using Silvester.Pathfinder.Reference.Web.Shared.Layout;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.Shields;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.Shields.Providers;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.PreciousMaterialShields;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.PreciousMaterialShields.Providers;
@using Silvester.Pathfinder.Reference.Web.Components.Cards;

@page "/shields"
@inherits BaseOverviewPage

<div>
    <PageLayout>

        <MudPaper Style="margin: 20px;">
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" Border="true">
                <MudTabPanel Text="Shields">
                    <ShieldsTable Title="Shields" PageProvider="@(new ShieldPageProvider(PathfinderReferenceApi))" />
                </MudTabPanel>
                <MudTabPanel Text="Precious Material Shields">
                    <PreciousMaterialShieldsTable PageProvider="@(new PreciousMaterialShieldPageProvider(PathfinderReferenceApi))" />
                </MudTabPanel>
            </MudTabs>
        </MudPaper>

    </PageLayout>

</div>

@code
{
    protected override string CollectionName => "shields";
}