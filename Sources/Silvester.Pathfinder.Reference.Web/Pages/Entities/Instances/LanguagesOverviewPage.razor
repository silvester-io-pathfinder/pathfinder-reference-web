@using Silvester.Pathfinder.Reference.Web.Shared.Layout;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.Languages;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.Languages.Providers;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.LanguageTypes;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.LanguageTypes.Providers;
@using Silvester.Pathfinder.Reference.Web.Components.Cards;

@page "/languages"
@inherits BaseOverviewPage

<div>
    <PageLayout>

        <MudPaper Style="margin: 20px;">
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" Border="true">
                <MudTabPanel Text="Languages">
                    <LanguagesTable PageProvider="@(new LanguagePageProvider(PathfinderReferenceApi))" />
                </MudTabPanel>
                <MudTabPanel Text="Types">
                    <LanguageTypesTable PageProvider="@(new LanguageTypePageProvider(PathfinderReferenceApi))" />
                </MudTabPanel>
            </MudTabs>
        </MudPaper>

    </PageLayout>

</div>

@code
{
    protected override string CollectionName => "languages";
}