@using Silvester.Pathfinder.Reference.Web.Shared.Layout;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.Armors;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.Armors.Providers;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.ArmorGroups;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.ArmorGroups.Providers;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.ArmorCategories;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.ArmorCategories.Providers;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.PreciousMaterialArmors;
@using Silvester.Pathfinder.Reference.Web.Components.Tables.Instances.PreciousMaterialArmors.Providers;
@using Silvester.Pathfinder.Reference.Web.Components.Cards;

@page "/armors"
@inherits BaseOverviewPage

<div>
    <PageLayout>

        <MudPaper Style="margin: 20px;">
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" Border="true">
                <MudTabPanel Text="Categories">
                    <ArmorCategoriesTable PageProvider="@(new ArmorCategoryPageProvider(PathfinderReferenceApi))" />
                </MudTabPanel>
                <MudTabPanel Text="Groups">
                    <ArmorGroupsTable PageProvider="@(new ArmorGroupPageProvider(PathfinderReferenceApi))" />
                </MudTabPanel>
            </MudTabs>
        </MudPaper>

        <MudPaper Style="margin: 20px;">
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" Border="true">
                <MudTabPanel Text="Armors">
                    <ArmorsTable Title="Armors" PageProvider="@(new ArmorPageProvider(PathfinderReferenceApi))" />
                </MudTabPanel>
                <MudTabPanel Text="Precious Material Armors">
                    <PreciousMaterialArmorsTable PageProvider="@(new PreciousMaterialArmorPageProvider(PathfinderReferenceApi))" />
                </MudTabPanel>
            </MudTabs>
        </MudPaper>

    </PageLayout>

</div>

@code
{
    protected override string CollectionName => "armors";
}