<div style="display: flex; white-space:nowrap">
    <MudTooltip Text="@Tooltip" Style="display: flex;">
        <div class="spacer" style="display:flex; flex-direction:row; margin-right: 15px; align-self: center;">
            <svg style="align-self:center; height: 12px; width: 12px; color: #919191;">@((MarkupString) Icon)</svg>
            <p style="font-size: 12px; margin-top: 2px; margin-left: 5px; color: #919191;">@Text</p>
        </div>
    </MudTooltip>
</div>
@code {  
    [Parameter]
    public MarkupString Icon { get; set; } = default!;

    [Parameter]
    public string Text { get; set; } = default!;

    [Parameter]
    public string Tooltip { get; set; } = default!;
}