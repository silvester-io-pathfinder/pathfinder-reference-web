@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<IRacesPage, RaceSortInput>

@Table

@code {

    protected override void CreateModel(TableBuilder<IRacesPage> builder)
    {
        builder
            .AddTextColumn(e => e.Name, "Name", nameof(IRacesPage.Name), true)
            .AddTextColumn(e => e.BaseSpeed.ToString(), "Base Speed", nameof(IRacesPage.BaseSpeed), hasDenseRightPadding: true)
            .AddTextColumn(e => e.BaseHealth.ToString(), "Base Health", nameof(IRacesPage.BaseHealth), hideBelow: Breakpoint.Xs, hasDenseRightPadding: true)
            .AddTextColumn(e => e.Size.Name, "Size", nameof(IRacesPage.Size) + "." + nameof(IRacesPage_Size.Name), hideBelow: Breakpoint.Xs)
            .AddTextColumn(e => e.Rarity.Name, "Rarity", nameof(IRacesPage.Rarity) + "." + nameof(IRacesPage_Rarity.Name), hideBelow: Breakpoint.SmAndDown)
            .AddTextColumn(e => e.Description, "Description", nameof(IRacesPage.Description), hideBelow: Breakpoint.MdAndDown)
            .AddInspectColumn(NavigationManager, e => $"races/{e.Id}");
    }
}