@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<IWeaponGroupsPage, WeaponGroupSortInput>

@Table

@code {
    protected override void CreateModel(TableBuilder<IWeaponGroupsPage> builder)
    {
        builder
            .AddTextColumn(e => e.Name, "Name", nameof(IWeaponGroupsPage.Name), true)
            .AddTextColumn(e => e.CriticalEffect, "Critical Effect", nameof(IWeaponGroupsPage.CriticalEffect), hideBelow: Breakpoint.Xs)
            .AddInspectColumn(NavigationManager, e => $"weapon-groups/{e.Id}");
    }
}