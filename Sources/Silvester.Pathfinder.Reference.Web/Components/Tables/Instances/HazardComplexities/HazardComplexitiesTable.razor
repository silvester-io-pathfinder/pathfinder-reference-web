@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<IHazardComplexitiesPage, HazardComplexitySortInput>

@Table

@code {
	protected override void CreateModel(TableBuilder<IHazardComplexitiesPage> builder)
	{
		builder
			.AddTextColumn(e => e.Name, "Name", nameof(IHazardComplexitiesPage.Name), true)
			.AddInspectColumn(NavigationManager, e => $"hazard-complexities/{e.Id}");
	}
}