@using Silvester.Pathfinder.Official.Web.Shared.Tables
@using Silvester.Pathfinder.Official.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Official.Web.Graphql
@using Silvester.Pathfinder.Official.Web.Services

@inherits AbstractTable<IFundamentalArmorRunesPage, FundamentalArmorRuneSortInput>

@Table

@code {
    protected override void CreateModel(TableBuilder<IFundamentalArmorRunesPage> builder)
    {
        builder
            .AddTextColumn(e => e.Name, "Name", nameof(IFundamentalArmorRunesPage.Name), true)
            .AddTextColumn(e => e.Details.First().Text, "Desciption", nameof(IFundamentalArmorRunesPage.Details) + "." + nameof(ITextBlock.Text), hideBelow: Breakpoint.MdAndDown)
            .AddInspectColumn(NavigationManager, e => $"fundamental-armor-runes/{e.Id}");
    }
}