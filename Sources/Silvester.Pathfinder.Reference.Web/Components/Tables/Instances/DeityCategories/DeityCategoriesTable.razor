@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<IDeityCategoriesPage, DeityCategorySortInput>

@Table

@code {
    protected override void CreateModel(TableBuilder<IDeityCategoriesPage> builder)
    {
        builder
            .AddTextColumn(e => e.Name, "Name", nameof(IDeitiesPage.Name), true)
            .AddTextColumn(e => e.Description, "Description", nameof(IPlanesPage.Details) + "." + nameof(ITextBlock.Text), hideBelow: Breakpoint.Xs)
            .AddInspectColumn(NavigationManager, e => $"deity-categories/{e.Id}");
    }
}