@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<IPlaneCategoriesPage, PlaneCategorySortInput>

@Table

@code {
    protected override void CreateModel(TableBuilder<IPlaneCategoriesPage> builder)
    {
        builder
            .AddTextColumn(e => e.Name, "Name", nameof(IPlaneCategoriesPage.Name), true)
            .AddTextColumn(e => e.Description, "Description", nameof(IPlaneCategoriesPage.Description), hideBelow: Breakpoint.Xs)
            .AddInspectColumn(NavigationManager, e => $"plane-categories/{e.Id}");
    }
}