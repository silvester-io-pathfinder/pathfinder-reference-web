@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<IArmorGroupsPage, ArmorGroupSortInput>

@Table

@code {
    protected override void CreateModel(TableBuilder<IArmorGroupsPage> builder)
    {
        builder
            .AddTextColumn(e => e.Name, "Name", nameof(IArmorGroupsPage.Name), true)
            .AddTextColumn(e => e.ArmorSpecializationEffect, "Specialization Effect", nameof(IArmorGroupsPage.ArmorSpecializationEffect), hideBelow: Breakpoint.Xs)
            .AddInspectColumn(NavigationManager, e => $"armor-groups/{e.Id}");
    }
}