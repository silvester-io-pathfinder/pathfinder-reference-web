@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<IPreciousMaterialsPage, PreciousMaterialSortInput>

@Table

@code {
    protected override void CreateModel(TableBuilder<IPreciousMaterialsPage> builder)
    {
        builder
            .AddTextColumn(e => e.Name, "Name", nameof(IPreciousMaterialsPage.Name), true)
            .AddTextColumn(e => e.Details.First(e => e.Order == 0).Text, "Description", nameof(IPreciousMaterialsPage.Details) + "." + nameof(ITextBlock.Text), hideBelow: Breakpoint.Xs)
            .AddInspectColumn(NavigationManager, e => $"precious-materials/{e.Id}");
    }
}