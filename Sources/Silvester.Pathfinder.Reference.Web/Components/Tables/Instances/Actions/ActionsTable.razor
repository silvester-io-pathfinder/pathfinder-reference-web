@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<IActionsPage, ActionSortInput>

@Table

@code {
    protected override void CreateModel(TableBuilder<IActionsPage> builder)
    {
        builder
            .AddActionIconColumn(e => e.ActionType!.Name, nameof(IFeatsPage.ActionType) + "." + nameof(IFeatsPage_ActionType.Name))
            .AddTextColumn(e => e.Name, "Name", nameof(IActionsPage.Name), true)
            .AddTextColumn(e => e.Details.First(e => e.Order == 0).Text, "Description", nameof(IActionsPage.Details) + "." + nameof(ITextBlock.Text), hideBelow: Breakpoint.Xs)
            .AddInspectColumn(NavigationManager, e => $"actions/{e.Id}");
    }
}