@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<IAlchemicalElixirsPage, AlchemicalElixirSortInput>

@Table

@code {
    protected override void CreateModel(TableBuilder<IAlchemicalElixirsPage> builder)
    {
        builder
            .AddActionIconColumn(e => e.Action.ActionType.Name, nameof(IAlchemicalElixirsPage.Action) + "." + nameof(IAlchemicalElixirPage_Action.Name) + "." + nameof(IAlchemicalElixirPage_Action_ActionType.Name))
            .AddTextColumn(e => e.Name, "Name", nameof(IAlchemicalElixirsPage.Name), true)
            .AddTextColumn(e => e.ItemBonus.ToString(), "Item Bonus", nameof(IAlchemicalElixirsPage.ItemBonus), hasDenseRightPadding: true, hideBelow: Breakpoint.Xs)
            .AddTextColumn(e => e.Bulk.Name, "Bulk", nameof(IAlchemicalElixirsPage.Bulk) + "." + nameof(IBulk.Name), hasDenseRightPadding: true, hideBelow: Breakpoint.Xs)
            .AddTextColumn(e => e.Details.First(e => e.Order == 0).Text, "Description", nameof(IAlchemicalElixirsPage.Details) + "." + nameof(ITextBlock.Text), hideBelow: Breakpoint.MdAndDown)
            .AddInspectColumn(NavigationManager, e => $"alchemical-elixirs/{e.Id}");
    }
}
