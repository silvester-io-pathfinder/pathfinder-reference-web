@using Silvester.Pathfinder.Reference.Web.Shared.Tables
@using Silvester.Pathfinder.Reference.Web.Shared.Tables.Builder
@using Silvester.Pathfinder.Reference.Web.Graphql
@using Silvester.Pathfinder.Reference.Web.Services

@inherits AbstractTable<ILanguageTypesPage, LanguageTypeSortInput>

@Table

@code {
    protected override void CreateModel(TableBuilder<ILanguageTypesPage> builder)
    {
        builder
            .AddTextColumn(e => e.Name, "Name", nameof(ILanguageTypesPage.Name), true)
            .AddInspectColumn(NavigationManager, e => $"language-types/{e.Id}");
    }
}